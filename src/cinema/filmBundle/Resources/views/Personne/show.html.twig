    {% extends 'cinemafilmBundle::layout.html.twig' %}
    {% block title %}Liste des films{% endblock %}
    
    {% block body %}
        <h2>Les films de {{personne.prenom}} {{personne.nom}}</h2>	
			    
				<div class="thumbnail">
                    <div class="caption-full">
                        <h4 class="pull-right">{{ film.genre }}</h4>
                        <h4>{{ film.titre }}</h4>
                        <p>{{ film.synopsis }}</p>
                    </div>
                    <div class="ratings">
                        <p class="pull-right">sorti le {{ film.date | date('d/m/Y') }}</p>
                        <p>Réalisé par : <a href="cinema-films-realisateur.html">{{ film.realisateur }}</a></p>
                    </div>
                    <p><a href="{{ path('page_films') }}">Retour</a></p>
                </div>
{% endblock %}
			
				
			    
				
				
				

            
			
			
				
				

            
